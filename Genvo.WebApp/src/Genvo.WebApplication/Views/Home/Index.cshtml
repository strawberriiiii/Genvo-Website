@{
    ViewData["Title"] = "Home Page";
}

<header id="index">
    <div class="header-content">
        <div class="header-content-inner">
            <h1>Change the way you look at genes</h1>
            <hr>
            <p>Discover your gene evolution data by visualizing it with Genvo. Just upload your data and start exploring things you never seen before.</p>
            <a href="#thetool" class="btn btn-primary btn-xl page-scroll">Start visualizing</a>
        </div>
    </div>
</header>



<section class="sec-grey" id="thetool">
    <div class="container">
        <h1 class="section-heading text-center">Visualize gene evolution</h1>
        <div class="row eqHeight">
            
            <div class="col-sm-6">
                <div class="card">
                    <h3 class="card-header">Two file format</h3>
                    <div class="card-block">
                        <div class="card-block-content">
                            <p class="p-small"><strong>Fileformat</strong></p>
                            
                            <div data-toggle="buttons">
                                <label class="btn btn-default active">
                                    <input type="radio" name="options" id="option1" autocomplete="off" checked> Newick
                                </label>
                                <label class="btn btn-default">
                                    <input type="radio" name="options" id="option2" autocomplete="off">NHX
                                </label>
                                <label class="btn btn-default">
                                    <input type="radio" name="options" id="option3" autocomplete="off">Notung
                                </label>
                            </div>
                            

                            <div id="load_files">
                                <form action="/upload" id="drop_zone_twofileformat" class="dropzone needsclick dz-clickable">
                                    <div class="dz-message needsclick">
                                        <h2> Drop files here </h2>
                                        <output id="gene-list"><strong>No file loaded</strong></output>
                                    </div>
                                </form>
                            </div>

                            <button class="btn btn-default position-r" id="button_exampledata">Use example data</button>
                            <p class="card-text">Upload one host and one species tree file in selected format, or use our example data to begin now.</p>
                            <a class="btn btn-primary btn-xl btn-block disabled" id="senddatatoviz">Visualize <span class="glyphicon glyphicon-chevron-right"></span></a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-sm-6">
                <div class="card">
                    <h3 class="card-header">Already reconciled</h3>
                    <div class="card-block">
                        <div class="card-block-content">
                            <p class="p-small"><strong>Fileformat</strong></p>

                            <div data-toggle="buttons">
                                <label class="btn btn-default active">
                                    <input type="radio" name="options" id="option1" autocomplete="off" checked> Notung
                                </label>
                                <label class="btn btn-default">
                                    <input type="radio" name="options" id="option2" autocomplete="off">PrimeTV
                                </label>
                            </div>

                            <div id="load_files">
                                <form id="drop_zone_reconciledfileformat" class="dropzone">
                                    <h2> Drop file here </h2>
                                    <output id="gene-list"><strong>No file loaded</strong></output>
                                </form>
                            </div>
                            <p class="card-text">Upload one host and one species tree file in selected format, or use our example data to begin now.</p>
                            <a class="btn btn-primary btn-xl btn-block disabled" style="background-color: red">Coming soon @*<span class="glyphicon glyphicon-chevron-right"></span>*@</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>




<section class="bg-primary-technology" id="technology">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">The technology</h2>
                <hr class="primary">
                @*<iframe src="https://player.vimeo.com/video/139554663?title=0&byline=0&portrait=0" width="100%" height="500px" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>*@
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box">
                    <i class="fa fa-4x fa-diamond wow bounceIn text-primary"></i>
                    <h3>Supported formats</h3>
                    <p class="text-muted">Genvo currently only support PrIMe data. </p>
                    <a class="text-muted" href="#about"> See details here.</a>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box">
                    <i class="fa fa-4x fa-paper-plane wow bounceIn text-primary" data-wow-delay=".1s"></i>
                    <h3>Ready to use</h3>
                    <p class="text-muted">By only uploading your data you will be able to visualize it, right here on the website.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box">
                    <i class="fa fa-4x fa-newspaper-o wow bounceIn text-primary" data-wow-delay=".2s"></i>
                    <h3>Safe datastorage</h3>
                    <p class="text-muted">We always makes sure that your data is safe with us. So that no one else then you can access it.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="service-box">
                    <i class="fa fa-4x fa-heart wow bounceIn text-primary" data-wow-delay=".3s"></i>
                    <h3>Interactive</h3>
                    <p class="text-muted">We intend to work around web-based solutions. More information will come in the future.</p>
                </div>
            </div>
        </div>
    </div>
</section>





